<%= turbo_frame_tag dom_id(@role) do %>
  <%= form_for @role, url: admin_role_path(@role) do |f|%>
    <%= f.label :role%><br>
    <%= f.text_field :role, class:'mb-3'%><br>
    <%= f.submit class: 'mb-3' %><br>
  <% end %>
  <% @permissions.each do |resource, permissions| %>
    <%= resource  %>
    <% permissions.each do |permission| %>
      <%= bootstrap_form_tag do |f|%>  <%= f.check_box permission.command %>
      <% end %>
    <% end %><hr>
  <% end %>
  <%= link_to('die', admin_role_path(@role), class: "btn btn-primary") %>
  <%= link_to('Destroy', admin_role_path(@role),  method: :delete, data: { confirm: 'Are you sure?' }, class:  "btn btn-primary") %>
<% end %>
