<%= form_for @user do |f|%>
  <%= f.label :username%><br>
  <%= f.text_field :username, class:'mb-3'%><br>
  <%= f.label "Change users avatar:"%><br>
  <%= f.file_field :avatar, class:'pb-3'%><br>
  <%= f.submit class: 'mb-3' %>
<% end %>
<% if @user.ban_time %>
  <%= link_to 'Unban User', admin_unban_user_path(@user.id), method: :post, class:"btn btn-outline-success mr-2" %>
<% else %>
  <%= link_to 'Ban bottoin', admin_ban_time_path(@user.id), method: :post, class:"btn btn-outline-danger mr-2" %>
<% end %>
