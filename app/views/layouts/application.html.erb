<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class='container-fluid'>

    <%= render 'layouts/alert', type: :info, style: :info %>
    <%= render 'layouts/alert', type: :success, style: :success %>
    <%= render 'layouts/alert', type: :warning, style: :warning %>
    <%= render 'layouts/alert', type: :error, style: :danger %>

    <%= yield %>
    </div>
  </body>
</html>
